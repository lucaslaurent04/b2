[Unit]
Description=Service for managing eQual user instances.
After=network.target

[Service]
Type=simple
ExecStart=/bin/bash -c '/usr/bin/php -S 0.0.0.0:8000 -t /root/b2/listener /root/b2/listener/listener.php >> /root/b2/listener/user-instance.log 2>&1 &'
WorkingDirectory=/root/b2/listener
Restart=always

[Install]
WantedBy=multi-user.target
